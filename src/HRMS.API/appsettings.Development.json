{
  "Cors": {
    "AllowedOrigins": [],
    "AllowedDomains": [
      "localhost",
      "app.github.dev"
    ]
  },
  "ConnectionStrings": {
    // SECURITY: Set password via User Secrets (dotnet user-secrets set "ConnectionStrings:Password" "your_password")
    // Or use environment variable: ConnectionStrings__Password
    "DefaultConnection": "Host=localhost;Database=hrms_master;Username=postgres;Password=;SSL Mode=Prefer"
  },
  "JwtSettings": {
    // SECURITY: NEVER commit JWT secrets to Git
    // Set via User Secrets: dotnet user-secrets set "JwtSettings:Secret" "your-secret-key-minimum-32-chars"
    // Or use the setup script: ./scripts/setup-dev-secrets.sh
    "Secret": "",
    "Issuer": "HRMS.API",
    "Audience": "HRMS.Client",
    "ExpirationMinutes": 15,
    "RefreshTokenExpirationDays": 7,
    "EnableTokenRotation": true
  },
  "Security": {
    "RequireHttpsMetadata": false
  },
  "GoogleCloud": {
    "SecretManagerEnabled": false
  },
  "Hangfire": {
    "WorkerCount": 5,
    "DashboardEnabled": true,
    "RequireAuthentication": false
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Debug",
      "Override": {
        "Microsoft": "Information",
        "Microsoft.Hosting.Lifetime": "Information",
        "Microsoft.EntityFrameworkCore.Database.Command": "Information",
        "HRMS": "Debug"
      }
    }
  },
  "Logging": {
    "LogLevel": {
      "Default": "Debug",
      "Microsoft.AspNetCore": "Information",
      "Microsoft.EntityFrameworkCore": "Information"
    }
  },
  "EmailSettings": {
    "SmtpServer": "localhost",
    "SmtpPort": 1025,
    "SmtpUsername": "",
    "SmtpPassword": "",
    "FromEmail": "noreply@morishr.local",
    "FromName": "MorisHR Dev",
    "EnableSsl": false,
    "UseDefaultCredentials": false
  },
  "AppSettings": {
    "FrontendUrl": "http://localhost:4200",
    "ActivationTokenExpiryHours": 24
  }
}
