{
  "ConnectionStrings": {
    "DefaultConnection": ""
  },
  "JwtSettings": {
    "Secret": "",
    "Issuer": "HRMS.API",
    "Audience": "HRMS.Client",
    "ExpirationMinutes": 60,
    "RefreshTokenExpirationDays": 7
  },
  "EmailSettings": {
    // DEVELOPMENT: Using MailHog (localhost SMTP for testing)
    // PRODUCTION: Set these values in Google Secret Manager (see PRODUCTION_DEPLOYMENT.md)
    // Supported providers: Gmail (smtp.gmail.com:587), SendGrid (smtp.sendgrid.net:587), AWS SES (email-smtp.REGION.amazonaws.com:587)
    "SmtpServer": "localhost",
    "SmtpPort": 1025,
    "SmtpUsername": "", // For production, use App Password (Gmail) or API Key (SendGrid/SES)
    "SmtpPassword": "", // NEVER commit actual passwords - use Secret Manager in production
    "FromEmail": "noreply@morishr.com", // Must be verified sender in production
    "FromName": "MorisHR", // Display name for emails
    "EnableSsl": false, // Set to true for production (required for Gmail/SendGrid/SES)
    "UseDefaultCredentials": false, // Keep false for production
    "EnableEmailSending": true, // Set to false to disable all email sending (useful for testing)
    "MaxRetryAttempts": 3, // Number of retry attempts for failed emails
    "RetryDelaySeconds": 5 // Delay between retry attempts
  },
  "AppSettings": {
    "FrontendUrl": "http://localhost:4200",
    "ProductionUrl": "https://morishr.com",
    "ActivationTokenExpiryHours": 24,
    "TenantSubdomain": "{subdomain}.morishr.com"
  },
  "Redis": {
    "ConnectionString": "",
    "InstanceName": "HRMS_",
    "DefaultCacheExpirationMinutes": 60
  },
  "GoogleCloud": {
    "ProjectId": "",
    "SecretManagerEnabled": false,
    "CloudSqlInstanceConnectionName": "",
    "StorageBucket": "hrms-uploads"
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.Hosting.Lifetime": "Information",
        "HRMS": "Information"
      }
    },
    "WriteTo": [
      {
        "Name": "Console"
      },
      {
        "Name": "File",
        "Args": {
          "path": "Logs/hrms-.log",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 30,
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} [{Level:u3}] [{CorrelationId}] {Message:lj}{NewLine}{Exception}"
        }
      }
    ],
    "Enrich": [
      "FromLogContext",
      "WithMachineName",
      "WithThreadId"
    ]
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "Cors": {
    "AllowedOrigins": [],
    "AllowedDomains": []
  },
  "IpRateLimiting": {
    "EnableEndpointRateLimiting": true,
    "StackBlockedRequests": false,
    "RealIpHeader": "X-Real-IP",
    "ClientIdHeader": "X-ClientId",
    "HttpStatusCode": 429,
    "IpWhitelist": [],
    "EndpointWhitelist": [
      "get:/health",
      "get:/health/ready",
      "get:/"
    ],
    "GeneralRules": [
      {
        "Endpoint": "*",
        "Period": "1m",
        "Limit": 100
      },
      {
        "Endpoint": "*",
        "Period": "1h",
        "Limit": 1000
      }
    ],
    "QuotaExceededResponse": {
      "Content": "{{ \"error\": \"Rate limit exceeded\", \"message\": \"Too many requests. Please try again later.\", \"retryAfter\": \"{0}\" }}",
      "ContentType": "application/json",
      "StatusCode": 429
    }
  },
  "IpRateLimitPolicies": {
    "IpRules": [
      {
        "Ip": "*",
        "Rules": [
          {
            "Endpoint": "POST:/api/auth/login",
            "Period": "15m",
            "Limit": 5
          },
          {
            "Endpoint": "POST:/api/auth/*",
            "Period": "1h",
            "Limit": 20
          },
          {
            "Endpoint": "DELETE:*",
            "Period": "1m",
            "Limit": 10
          },
          {
            "Endpoint": "POST:/api/tenants*",
            "Period": "1h",
            "Limit": 10
          },
          {
            "Endpoint": "POST:/api/payroll/*/process",
            "Period": "1h",
            "Limit": 50
          }
        ]
      }
    ]
  },
  "Security": {
    "RequireHttpsMetadata": true,
    "EnableApiKeyValidation": false,
    "AllowedApiKeys": []
  },
  "Hangfire": {
    "WorkerCount": 5,
    "DashboardEnabled": false,
    "RequireAuthentication": true
  },
  "HealthChecks": {
    "Enabled": true,
    "DetailedErrors": false
  },
  "Performance": {
    "EnableResponseCompression": true,
    "EnableResponseCaching": true,
    "MaxRequestBodySize": 10485760
  },
  "SecurityAlerting": {
    "Enabled": true,
    "EmailEnabled": true,
    "EmailRecipients": [
      "security@morishr.com",
      "admin@morishr.com"
    ],
    "EmailRecipients:CRITICAL": [
      "security@morishr.com",
      "admin@morishr.com",
      "cto@morishr.com"
    ],
    "EmailRecipients:EMERGENCY": [
      "security@morishr.com",
      "admin@morishr.com",
      "cto@morishr.com",
      "ceo@morishr.com"
    ],
    "SmsEnabled": false,
    "SmsRecipients": [],
    "SlackEnabled": false,
    "SlackWebhookUrl": "",
    "SlackChannels": [
      "#security-alerts",
      "#critical-alerts"
    ],
    "SiemEnabled": false,
    "SiemType": "Splunk",
    "SiemEndpoint": "",
    "FailedLoginThreshold": 5,
    "AfterHoursStart": 18,
    "AfterHoursEnd": 6,
    "MassDataExportThreshold": 500
  },
  "RateLimit": {
    "Enabled": true,
    "UseRedis": false,
    "RedisConnectionString": "",
    "Algorithm": "SlidingWindow",
    "GeneralLimit": 100,
    "SuperAdminLimit": 30,
    "AuthenticationLimit": 5,
    "WindowSeconds": 60,
    "WhitelistedIPs": [
      "127.0.0.1",
      "::1"
    ],
    "StatusCode": 429,
    "EnableAutoBlacklist": true,
    "BlacklistThreshold": 10,
    "BlacklistDurationMinutes": 60,
    "LogViolations": true,
    "AlertOnViolations": true
  },
  "AnomalyDetection": {
    "Enabled": true,
    "FailedLoginThreshold": 5,
    "FailedLoginWindowMinutes": 15,
    "MassExportRecordThreshold": 100,
    "EnableImpossibleTravelDetection": true,
    "ImpossibleTravelKmPerHour": 800,
    "ConcurrentSessionThreshold": 3,
    "AfterHoursStartHour": 22,
    "AfterHoursEndHour": 6,
    "SalaryChangePercentageThreshold": 50,
    "RapidActionThreshold": 10,
    "RapidActionWindowSeconds": 60,
    "AutoNotifyOnCritical": true,
    "AutoNotifyOnHigh": true,
    "NotificationRecipients": [
      "security@morishr.com",
      "compliance@morishr.com"
    ]
  }
}
