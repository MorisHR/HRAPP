{
  "ConnectionStrings": {
    "DefaultConnection": "NOTE: Set in Google Secret Manager with format: Host=...;Database=...;Pooling=true;Minimum Pool Size=10;Maximum Pool Size=200;Connection Lifetime=300;Connection Idle Lifetime=60;"
  },
  "JwtSettings": {
    "Secret": "",
    "Issuer": "HRMS.Production",
    "Audience": "HRMS.Client",
    "ExpirationMinutes": 60,
    "RefreshTokenExpirationDays": 7
  },
  "EmailSettings": {
    "SmtpServer": "",
    "SmtpPort": 587,
    "SenderEmail": "",
    "SenderName": "HRMS System",
    "Username": "",
    "Password": "",
    "EnableSsl": true
  },
  "Redis": {
    "ConnectionString": "",
    "InstanceName": "HRMS_PROD_",
    "DefaultCacheExpirationMinutes": 60
  },
  "GoogleCloud": {
    "ProjectId": "",
    "SecretManagerEnabled": true,
    "CloudSqlInstanceConnectionName": ""
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Warning",
      "Override": {
        "Microsoft": "Error",
        "Microsoft.Hosting.Lifetime": "Information",
        "HRMS": "Information",
        "System": "Error"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "formatter": "Serilog.Formatting.Json.JsonFormatter, Serilog"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "/var/log/hrms/hrms-.log",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 90,
          "fileSizeLimitBytes": 104857600,
          "rollOnFileSizeLimit": true,
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} [{Level:u3}] [{CorrelationId}] {Message:lj}{NewLine}{Exception}"
        }
      }
    ],
    "Enrich": [
      "FromLogContext",
      "WithMachineName",
      "WithThreadId",
      "WithEnvironmentName"
    ]
  },
  "Logging": {
    "LogLevel": {
      "Default": "Warning",
      "Microsoft.AspNetCore": "Error",
      "Microsoft.EntityFrameworkCore": "Error"
    }
  },
  "AllowedHosts": "*.hrms.com,hrms.com",
  "Cors": {
    "AllowedOrigins": [
      "https://admin.hrms.com",
      "https://*.hrms.com"
    ]
  },
  "RateLimiting": {
    "EnableEndpointRateLimiting": true,
    "StackBlockedRequests": false,
    "RealIpHeader": "X-Real-IP",
    "ClientIdHeader": "X-ClientId",
    "HttpStatusCode": 429,
    "GeneralRules": [
      {
        "Endpoint": "*",
        "Period": "1m",
        "Limit": 100
      },
      {
        "Endpoint": "*",
        "Period": "1h",
        "Limit": 1000
      },
      {
        "Endpoint": "*/auth/login",
        "Period": "1m",
        "Limit": 5
      },
      {
        "Endpoint": "*/auth/register",
        "Period": "1h",
        "Limit": 3
      }
    ]
  },
  "Security": {
    "RequireHttpsMetadata": true,
    "EnableApiKeyValidation": true,
    "AllowedApiKeys": []
  },
  "Hangfire": {
    "WorkerCount": 10,
    "DashboardEnabled": false,
    "RequireAuthentication": true
  },
  "HealthChecks": {
    "Enabled": true,
    "DetailedErrors": false
  },
  "Performance": {
    "EnableResponseCompression": true,
    "EnableResponseCaching": true,
    "MaxRequestBodySize": 10485760
  }
}
